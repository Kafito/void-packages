python3-path-and-address_package() {
	noarch=yes
	depends="python3"
	pycompile_module="path-and-address"
	short_desc="${short_desc/Python2/Python3}"
	pkg_install() {
		vmove usr/lib/python3*
		vlicense LICENSE
	}
}
